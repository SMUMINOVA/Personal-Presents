@model RegisterModel

@{
    Layout = "_Layout";
}

<form class ="form-signin" method="post" asp-action="Register" asp-controller ="Account" asp-anti-forgery = "true">
    <img class="mb-4" src="/img/shariki.jpg" alt="" width="150" height="150">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <p><h1 class="h3 mb-3 font-weight-normal">Please sign up</h1></p>
    <div class ="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <input type="text" asp-for="Email" class="form-control" placeholder="Email address">
                <span asp-validation-for="Email"></span>
            </div>
        </div><br>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <input type="text" asp-for="Password" class="form-control" placeholder="Password">
                <span asp-validation-for="Password" ></span>
            </div>
        </div><br>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <input type="text" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div><br>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <input type="submit" value="Sign up" class="btn btn-lg btn-primary btn-block">
            </div>
        </div>
    </div>
</form>

