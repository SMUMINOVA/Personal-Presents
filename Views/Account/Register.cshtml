@model RegisterModel


<form method="post" asp-action="Register" asp-controller ="Account" asp-anti-forgery = "true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Email: </label>
            <input type="text" asp-for="Email">
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password">Пароль: </label>
            <input type="text" asp-for="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Подтвердите пароль: </label>
            <input type="text" asp-for="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <input type="submit" value="Регистрация" class="btn btn-success">
        </div>
    </div>
</form>