@model LoginModel

@{
    Layout = "_Layout";
}

<form class ="form-signin" method="post" asp-action="Login" asp-controller ="Account" asp-anti-forgery = "true">
    <img class="mb-4" src="/img/shariki.jpg" alt="" width="150" height="150">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <div class ="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <input type="text" asp-for="Email" class=" form-control " placeholder="Email address">
                <span asp-validation-for="Email"></span>
            </div>
        </div><br>
        
        <div class="row justify-content-center">
            <div class="col-md-4">
                <input type="text" asp-for="Password" class=" form-control" placeholder="Password">
                <span asp-validation-for="Password" ></span>
            </div>
        </div><br>

        <div class="row justify-content-center">        
            <div class="col-md-4">
                <input type="submit" value="Sign in" class=" btn btn-lg btn-primary btn-block">
            </div>
        </div>
    </div>
</form><br>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <a asp-action="Register" asp-controller="Account" class=" btn btn-lg btn-danger btn-block">Sign up</a>
        </div>
    </div>
</div>
