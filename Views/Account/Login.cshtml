@model LoginModel


<form method="post" asp-action="Login" asp-controller ="Account" asp-anti-forgery = "true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Email: </label>
            <input type="text" asp-for="Email">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль: </label>
            <input type="text" asp-for="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Регистрация" class="btn btn-success">
        </div>
    </div>
</form>
<a asp-action="Register" asp-controller="Account" class="btn btn-danger">Регистрация</a>